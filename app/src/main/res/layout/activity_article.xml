<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".activity.ArticleActivity">

        <TextView
            android:id="@+id/titleArticle"
            android:layout_width="match_parent"
            android:text="Bai viet nay la bai viet tieng anh"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btReadTitle"
            android:layout_gravity="center"
            android:src="@drawable/ic_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgArticle"
            android:src="@drawable/slide1"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/contentArticle"
            android:text="Content English"
            android:minLines="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btReadContent"
            android:layout_gravity="center"
            android:src="@drawable/ic_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>