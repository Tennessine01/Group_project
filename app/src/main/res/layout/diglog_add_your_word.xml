<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_color_white_16">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/word109KInfoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:textColor="@color/black"
            android:hint="Nhập từ"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/read109KInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_audio" />

    </LinearLayout>

    <EditText
        android:id="@+id/phonetic109KInfoAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập phiên âm"
        android:textSize="22dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/mean109KInfoAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nghĩa"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/desc109KInfoAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnAddYourWord"
            android:background="@drawable/bg_button_primay_color"
            android:text="Thêm từ"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btnCancelYourWord"
            android:background="@drawable/bg_button_primay_color"
            android:text="Hủy bỏ"
            android:layout_marginLeft="80dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>